require "socket"
# @return [String] public IP address of workstation used for egress traffic
def local_ip
  @local_ip ||= begin
    # turn off reverse DNS resolution temporarily
    orig = Socket.do_not_reverse_lookup
    Socket.do_not_reverse_lookup = true

    # open UDP socket so that it never send anything over the network
    UDPSocket.open do |s|
      s.connect "8.8.8.8", 1 # any global IP address works here
      s.addr.last
    end
  ensure
    Socket.do_not_reverse_lookup = orig
  end
end

# @return [Integer] default listening port
def local_port
  8080
end

# @return [String] the proxy URL
def http_proxy_url
  "http://#{local_ip}:#{local_port}"
end

# @return [TrueClass,FalseClass] whether or not the port is listening
def proxy_running?
  socket = TCPSocket.new(local_ip, local_port)
  true
rescue SocketError, Errno::ECONNREFUSED,
       Errno::EHOSTUNREACH, Errno::ENETUNREACH, IOError
  false
rescue Errno::EPERM, Errno::ETIMEDOUT
  false
ensure
  socket && socket.close
end
http_proxy = proxy_running? ? http_proxy_url : ""
no_proxy = "localhost,127.0.0.1,.example.com"

# Vagrantfile
Vagrant.configure("2") do |config|
  config.ssh.shell = "/bin/sh"
  config.vm.provider "virtualbox" do |v|
    v.memory = 256
    v.cpus = 1
  end
  config.vm.box = "trombik/ansible-openbsd-6.0-amd64"

  config.vm.define "gw1" do |c|
    c.vm.network "private_network", ip: "172.16.0.254"
    c.vm.network "private_network", ip: "192.168.21.254"
    c.vm.hostname = "gw1.virtualbox.trombik.org"
    c.vm.provision "shell", path: "provisioners/shell/gw1.sh", env: { "http_proxy" => http_proxy, "https_proxy" => http_proxy, "no_proxy" => no_proxy }
    c.vm.provision :ansible do |ansible|
      ansible.limit = "192.168.21.254"
      ansible.playbook = "site.yml"
      ansible.extra_vars = {
        ansible_python_interpreter: "/usr/local/bin/python",
        http_proxy: http_proxy,
        https_proxy: http_proxy,
        no_proxy: no_proxy
      }
      ansible.inventory_path = "inventories/staging"
      ansible.verbose = "v"
    end
  end

  config.vm.define "client1" do |c|
    c.vm.box = "trombik/ansible-ubuntu-14.04-amd64"
    c.vm.network "private_network", ip: "172.16.0.100"
    c.vm.hostname = "client1.virtualbox.trombik.org"
    c.vm.provision "shell", path: "provisioners/shell/client1.sh", env: { "http_proxy" => http_proxy, "https_proxy" => http_proxy, "no_proxy" => no_proxy }
    c.vm.provision :ansible do |ansible|
      ansible.playbook = "site.yml"
      ansible.extra_vars = {
        ansible_python_interpreter: "/usr/local/bin/python",
        http_proxy: http_proxy,
        https_proxy: http_proxy,
        no_proxy: no_proxy
      }
      ansible.inventory_path = "inventories/staging"
      ansible.verbose = "v"
    end
  end

  config.vm.define "client2" do |c|
    c.vm.network "private_network", ip: "192.168.21.100"
    c.vm.hostname = "client2.virtualbox.trombik.org"
    c.vm.provision "shell", path: "provisioners/shell/client2.sh", env: { "http_proxy" => http_proxy, "https_proxy" => http_proxy, "no_proxy" => no_proxy }
    c.vm.provision :ansible do |ansible|
      ansible.playbook = "site.yml"
      ansible.extra_vars = {
        ansible_python_interpreter: "/usr/local/bin/python",
        http_proxy: http_proxy,
        https_proxy: http_proxy,
        no_proxy: no_proxy
      }
      ansible.inventory_path = "inventories/staging"
      ansible.verbose = "v"
    end
  end
end
